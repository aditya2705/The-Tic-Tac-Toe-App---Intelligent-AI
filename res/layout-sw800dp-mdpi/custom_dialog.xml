<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top" >

    <ImageView
        android:id="@+id/dialogbox"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:src="@drawable/dialogbox" />

    <TextView
        android:id="@+id/endTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="WINNER: PLAYER"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold" 
        android:gravity="center"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="288dp"
        android:layout_marginTop="150dp"
        android:text="ad arega rjhjH SJHjmW Nakbaj bajdgbmab sabrj barjg barbgk abgr"
        android:textColor="#6B6B6B"
        android:textSize="35sp" />

    <ImageView
        android:id="@+id/thumb"
        android:layout_width="340dp"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/endTitle"
        android:scaleType="fitXY"
        android:src="@drawable/tup" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/description"
        android:layout_below="@+id/description"
        android:layout_marginRight="35dp"
        android:layout_marginTop="45dp"
        android:text="- The Computer"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="italic" />

</RelativeLayout>