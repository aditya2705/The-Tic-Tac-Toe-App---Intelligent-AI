<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ttt"
    android:gravity="center_horizontal" >

    <RelativeLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/row1"
        android:layout_marginTop="23dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/otile22"
            android:layout_width="80dp"
            android:layout_height="115dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/otile21"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/otile21"
            android:layout_width="80dp"
            android:layout_height="115dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/otile23"
            android:layout_width="80dp"
            android:layout_height="115dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/otile22"
            android:src="@drawable/blank" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnNewGame"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="21dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/otile32"
            android:layout_width="80dp"
            android:layout_height="115dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/otile31"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/otile31"
            android:layout_width="80dp"
            android:layout_height="115dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/otile33"
            android:layout_width="80dp"
            android:layout_height="115dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/otile32"
            android:src="@drawable/blank" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/otile12"
            android:layout_width="80dp"
            android:layout_height="115dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/otile11"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/otile11"
            android:layout_width="80dp"
            android:layout_height="115dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/otile13"
            android:layout_width="80dp"
            android:layout_height="115dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/otile12"
            android:src="@drawable/blank" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnNewGame"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/custom_newgame"
        android:textSize="14sp" />

</RelativeLayout>