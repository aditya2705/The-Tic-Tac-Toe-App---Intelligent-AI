<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top" >

    <ImageView
        android:id="@+id/dialogbox"
        android:layout_width="300dp"
        android:layout_height="240dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:src="@drawable/dialogbox" />

    <TextView
        android:id="@+id/endTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="WINNER: PLAYER"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/description"
        android:layout_below="@+id/description"
        android:layout_marginTop="18dp"
        android:text="- The Computer"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/description"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumb"
        android:layout_toRightOf="@+id/thumb"
        android:text="ad arega rjhjH SJHjmW Nakbaj bajdgbmab sabrj barjg barbgk abgr"
        android:textColor="#6B6B6B"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/thumb"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignBottom="@+id/dialogbox"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="72dp"
        android:scaleType="fitXY"
        android:src="@drawable/tup" />

</RelativeLayout>