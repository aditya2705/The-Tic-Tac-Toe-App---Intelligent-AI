<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  	
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000"
    android:gravity="center_horizontal" >

    <ImageView
        android:id="@+id/animBar"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/topbar" />

    <Button
        android:id="@+id/options"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/oneplayer"
        android:layout_below="@+id/oneplayer"
        android:layout_marginTop="65dp"
        android:background="@drawable/custom_options" />

    <Button
        android:id="@+id/twoplayer"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/oneplayer"
        android:layout_marginTop="82dp"
        android:background="@drawable/custom_twoplayer" />

    <Button
        android:id="@+id/oneplayer"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:layout_below="@+id/animBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/custom_oneplayer" />

    <Button
        android:id="@+id/statsbutton"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_below="@+id/options"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/custom_statsbutton" />

</RelativeLayout>